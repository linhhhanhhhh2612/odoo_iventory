<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_vn_warehouse">
            <field name="name">Quản lý kho </field>
            <field name="description">Phân quyền cho quy trình kho Việt Nam</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_vn_employee" model="res.groups">
            <field name="name">Nhân viên kho (Đề xuất)</field>
            <field name="category_id" ref="module_category_vn_warehouse"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_vn_stock_manager" model="res.groups">
            <field name="name">Thủ kho (Duyệt)</field>
            <field name="category_id" ref="module_category_vn_warehouse"/>
            <field name="implied_ids" eval="[(4, ref('group_vn_employee'))]"/>
        </record>

        <record id="group_vn_accountant" model="res.groups">
            <field name="name">Kế toán kho (Duyệt cuối)</field>
            <field name="category_id" ref="module_category_vn_warehouse"/>
            <field name="implied_ids" eval="[(4, ref('group_vn_employee'))]"/>
        </record>

    </data>
</odoo>
